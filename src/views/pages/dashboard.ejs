<body class="tm-container-1300px has-side-panel side-panel-right">
  <%- include('../partials/headerTop.ejs') %>
    <li class="menu-item">
      <a href="/">Home</a>
    </li>
    <li class="menu-item">
      <a href="/services">Services</a>
    </li>
    <li class="menu-item">
      <a href="/about">About</a>
    </li>
    <li class="menu-item">
      <a href="/contact">Contact</a>
    </li>
    <li class="menu-item">
      <a href="/checkout">Telehealth &amp; Labs</a>
    </li>
    <li class="menu-item">
      <a class="d-none" href="/dashboard" id="admin_link">Admin Dashboard</a>
    </li>
    <li class="menu-item">
      <a href="#" id="logout_link">Sign out</a>
    </li>
    <%- include('../partials/headerBottom.ejs') %>
      <!-- Start main-content -->
      <div class="main-content-area">
        <!-- Section: page title -->

        <!-- Admin dashboard container -->
        <div class="container-fluid p-5">
          <!-- Page header -->
          <h1 class="mb-4">Admin Dashboard</h1>

          <!-- Product management section -->
          <h2 class="mb-4">Product Management</h2>

          <div class="card mb-4">
            <div class="card-header">
              <h3>Edit Product</h3>
            </div>

            <div class="card-body">
              <!-- Product select dropdown -->
              <div class="form-group">
                <label for="product-select">Select a product:</label>
                <select class="form-control" id="product-select">
                  <% for(let product of products) {%>
                    <option value=<%=product?.id%>><%=product?.product_name%>
                    </option>
                    <% } %>
                </select>
              </div>
              <!-- Product name input -->
              <div class="form-group my-3">
                <label for="product-name">Product Name:</label>
                <input type="text" class="form-control" id="product-name">
              </div>
              <!-- Product price input -->
              <div class="form-group my-3">
                <label for="product-price">Product Price:</label>
                <input type="number" class="form-control" id="product-price">
              </div>
              <!-- Product type input -->
              <div class="form-group">
                <label for="product-select">Product type:</label>
                <select class="form-control" id="product-type-select">
                  <% for(let type of product_type) {%>
                    <option value=<%=type%>><%=type%>
                    </option>
                    <% } %>
                </select>
              </div>
              <!-- Product description input -->
              <div class="form-group my-3">
                <label for="product-description">Product Description:</label>
                <textarea class="form-control" id="product-description"></textarea>
              </div>
              <!-- notify status -->
              <div class="text-center d-none" id="product_notify"></div>
              <!-- Update product button -->
              <button class="btn btn-primary my-3" id="update-product-button">
                <span id="update_product_text">Update Product</span>
                <span id="update_product_text_spin" class="d-none">
                  <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                  Loading...
                </span>
              </button>
              <button class="btn btn-warning my-3 px-5" id="add-product-button">
                Add New Product
              </button>
            </div>
          </div>

          <!-- add product -->
          <div style="max-height: 600px; margin:40px 0px;" class="modal fade" id="add_new_product" tabindex="-1"
            aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="add-product-title">Add New Product</h5>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div id="add-product-detail" class="modal-body">
                  <div id="add-new-product-error" class="alert alert-danger d-none"></div>
                  <div class="mb-3">
                    <label for="recipient-name" class="col-form-label">Product Name:</label>
                    <input type="text" class="form-control" id="new-product-name">
                  </div>
                  <!-- Product price input -->
                  <div class="form-group mb-3">
                    <label for="product-price">Product Price:</label>
                    <input type="number" class="form-control" id="new-product-price">
                  </div>
                  <!-- Product type input -->
              <div class="form-group mb-3">
                <label for="product-select">Product type:</label>
                <select class="form-control" id="new-product-type-select">
                  <% for(let type of product_type) {%>
                    <option value=<%=type%>><%=type%>
                    </option>
                    <% } %>
                </select>
              </div>
                  <!-- Product description input -->
                  <div class="form-group mb-3">
                    <label for="product-description">Product Description:</label>
                    <textarea class="form-control" id="new-product-description"></textarea>
                  </div>

                </div>
                <div class="modal-footer">
                  <button type="button" id="add-product-confirmation" class="btn btn-primary">
                    <span id="add_product_text">Add</span>
                    <span id="add_product_text_spin" class="d-none">
                      <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                      Loading...
                    </span>
                  </button>
                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                </div>
              </div>

            </div>
          </div>

          <!-- User management section -->
          <h2 class="mb-4">User Management</h2>
          <div class="card mb-4">
            <div class="card-header">
              <h3>Edit Users</h3>
            </div>
            <div class="card-body">
              <form id="searchUser">
                <input type="hidden" id="edit-user-id">
                <div class="form-group my-3">
                  <label for="edit-email">Email</label>
                  <input type="email" class="form-control" id="edit-email" placeholder="Enter email">
                </div>
                <div class="form-group my-3">
                  <label for="edit-name">Name</label>
                  <input type="text" class="form-control" id="edit-name" placeholder="Enter name">
                </div>
                <div class="form-group my-3">



                  <div class="text-center d-none" id="user_search_notify"></div>
                  <button type="submit" class="btn btn-primary" id="user_search">
                    <span id="search_user_text">Search Users</span>
                    <span id="search_user_text_spin" class="d-none">
                      <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                      Loading...
                    </span>
                  </button>
                  <button type="button" class="btn btn-secondary" id="cancel-edit-user">Reset</button>
              </form>
              <br>

              <div class="my-4">
                <label for="populate">Click the button to populate the users table below with all users in
                  the
                  database</label>
                <br>
                <button name='populate' id='populate' type="button" class="btn btn-sm btn-dark">Populate User</button>
              </div>

              <!-- Modal edit user -->
              <div style="max-height: 600px; margin:40px 0px;" class="modal fade" id="update_user" tabindex="-1"
                aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title" id="update-user-title">Update User</h5>
                      <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div id="user-update-detail" class="modal-body">
                      <div class="mb-3">
                        <label for="recipient-name" class="col-form-label">First Name:</label>
                        <input type="text" class="form-control" id="update-first-name">
                      </div>
                      <div class="mb-3">
                        <label for="recipient-name" class="col-form-label">Last Name:</label>
                        <input type="text" class="form-control" id="update-last-name">
                      </div>
                      <!-- <div class="mb-3">
                        <label for="recipient-name" class="col-form-label">User Type:</label>
                        <input type="text" class="form-control" id="update-user-type">
                      </div>  -->
                      <div class="mb-3">
                        <label for="recipient-name" class="col-form-label">Email:</label>
                        <input type="text" class="form-control" id="update-user-email">
                      </div>
                      <div class="mb-3">
                        <label for="recipient-name" class="col-form-label">Address:</label>
                        <input type="text" class="form-control" id="update-user-address">
                      </div>
                      <div class="mb-3">
                        <label for="recipient-name" class="col-form-label">Address Line 2:</label>
                        <input type="text" class="form-control" id="update-user-addressline2">
                      </div>
                      <div class="mb-3">
                        <label for="recipient-name" class="col-form-label">City:</label>
                        <input type="text" class="form-control" id="update-user-city">
                      </div>
                      <div class="mb-3">
                        <label for="recipient-name" class="col-form-label">State:</label>
                        <input type="text" class="form-control" id="update-user-state">
                      </div>
                      <div class="mb-3">
                        <label for="recipient-name" class="col-form-label">Zip:</label>
                        <input type="text" class="form-control" id="update-user-zip">
                      </div>
                      <div class="mb-3">
                        <label for="recipient-name" class="col-form-label">Phone:</label>
                        <input type="tel" class="form-control" id="update-user-phone"
                          pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" maxlength="12" oninput="addDashes(this)">
                      </div>
                    </div>
                    <SCRIPT LANGUAGE="JavaScript">
                      function addDashes(f) {
                        f.value = f.value.replace(/\D/g, '');

                        f.value = f.value.slice(0, 3) + "-" + f.value.slice(3, 6) + "-" + f.value.slice(6, 15);
                      }
                    </SCRIPT>
                    <div class="modal-footer">
                      <button type="button" id="update-confirmation" class="btn btn-primary">
                        <span id="update_user_text">Confirm</span>
                        <span id="update_user_text_spin" class="d-none">
                          <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                          Loading...
                        </span>
                      </button>
                      <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    </div>
                  </div>

                </div>
              </div>
              <!-- Modal remove user confirm -->
              <div class="modal fade" id="delete_user" tabindex="-1" aria-labelledby="exampleModalLabel"
                aria-hidden="true">
                <div class="modal-dialog">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title" id="delete-user-title"></h5>
                      <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div id="user-delete-detail" class="modal-body">

                    </div>
                    <div class="modal-footer">
                      <button type="button" id="delete-confirmation" class="btn btn-primary">
                        <span id="delete_user_text">Confirm</span>
                        <span id="delete_user_text_spin" class="d-none">
                          <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                          Loading...
                        </span>
                      </button>
                      <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    </div>
                  </div>

                </div>
              </div>

              <!-- Modal remove user success -->
              <div class="modal fade" id="delete_user_success" tabindex="-1" aria-labelledby="exampleModalLabel"
                aria-hidden="true">
                <div class="modal-dialog">
                  <div class="modal-content">
                    <div id="delete-success">
                      <div id="delete-user-success-icon" style="text-align: center;padding: 40px 0px; color: #47C9A2;">
                        <svg xmlns="http://www.w3.org/2000/svg" width="150" height="150" fill="currentColor"
                          class="bi bi-check-circle-fill" viewBox="0 0 16 16">
                          <path
                            d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z" />
                        </svg>
                      </div>
                      <div id="delete-user-msg" style="text-align: center;"></div>
                      <div class="modal-footer">
                        <div style="margin: auto;"><button type="button" class="btn btn-secondary"
                            data-bs-dismiss="modal">Close</button></div>
                      </div>
                    </div>
                  </div>

                </div>
              </div>
              <div class="table-responsive" id="table-user">
                <table id="#order-data-table" class="table table-striped table-hover table-users">
                  <thead>
                    <tr>
                      <th>First Name</th>
                      <th>Last Name</th>
                      <th>Active</th>
                      <th>Type</th>
                      <th>Email</th>
                      <th>Email Confirmed</th>
                      <th>Address</th>
                      <th>Address Line 2</th>
                      <th>City</th>
                      <th>State</th>
                      <th>Zip</th>
                      <th>Phone</th>
                      <th>Jotform Filled</th>
                      <th>Registered On</th>
                      <th class='text-center'>Edit</th>
                      <th class='text-center'>Delete</th>
                    </tr>
                  </thead>
                  <tbody id="user-table-body">
                  </tbody>
                </table>

              </div>

            </div>
          </div>

          <!-- Order management section -->

          <div class="card mb-4">
            <div class="card-header">
              <h3>Manage Order</h3>
            </div>
            <div class="card-body">
              <div class="my-4">
                <label for="populate-order">Click the button to populate the order table below with all Orders in
                  the
                  database</label>
                <br>
                <button name='populate' id='populate-order' type="button" class="btn btn-sm btn-dark">Populate
                  Order</button>
              </div>
              <div>
              </div>
              <div class="table-responsive" id="table-order">
                <table id="#user-data-table" class="table table-striped table-hover table-users">
                  <thead>
                    <tr>
                      <th>Buyer Name</th>
                      <th>Phone</th>
                      <th>Email</th>
                      <th>Address</th>
                      <th>City</th>
                      <th>State</th>
                      <th>Country</th>
                      <th width="200">Product Name</th>
                      <th width="50">Product Quantity</th>
                      <th width="100">Price</th>
                      <th>Total Paid Amount</th>
                      <th>Transaction ID</th>
                      <th>Order Date</th>
                    </tr>
                  </thead>
                  <tbody id="order-table-body">
                  </tbody>
                </table>
              </div>
            </div>
          </div>

          <!-- end main-content -->
          <%- include('../partials/footer') %>


            <!-- Footer Scripts -->
            <script src="js/custom.js"></script>
            <script src="js/api_call.js"></script>

</body>

