        <!-- Section: Job Apply Form -->
        <section class="divider">
          <div class="container">
            <div class="row">
              <div class="col-md-6 offset-md-3">
                <div class="border-1px p-30 mb-0">
                  <h3 class="text-theme-colored1 text-center mt-0 pt-10">Meal Plan Specifications &amp; Customizations
                  </h3>
                  <hr />
                  <p class='text-dark'>Our Custom 30-Day Meal Plan Service is a personalized, comprehensive, and
                    easy-to-follow solution
                    for individuals seeking to achieve their nutrition and fitness goals. By gathering detailed
                    information about our customers, we leverage the power of our custom-trained AI to create a unique
                    meal plan tailored to their specific needs, preferences, and lifestyle. The service aims to provide
                    maximum value by addressing various factors, including dietary restrictions, allergies, cooking
                    abilities, and budget constraints.</p>
                  <form id="meal_plan_form" name="meal_plan_form" action="/meal_plan_api" method="post"
                    enctype="multipart/form-data">
                    <div class="row">
                      <div class="col-sm-6">
                        <div class="mb-3">
                          <label>Age <small>*</small></label>
                          <input name="age" type="number" placeholder="Current Age" class="form-control" required />
                        </div>
                      </div>
                      <div class="col-sm-6">
                        <div class="mb-3">
                          <label>Gender <small>*</small></label>
                          <select name="gender" class="form-control" required>
                            <option value="">Select Gender</option>
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                            <option value="Non-Binary">Non-Binary</option>
                            <option value="Prefer Not to Say">Prefer Not to Say</option>
                          </select>
                        </div>
                      </div>
                    </div>

                    <div class="row">
                      <div class="col-12">
                        <div class="mb-3">
                          <label>Height</label>
                          <input name="height" type="text" placeholder="Height (e.g., 5'11'' or 180 cm)"
                            class="form-control" />
                        </div>
                      </div>
                    </div>

                    <div class="row">
                      <div class="col-sm-6">
                        <div class="mb-3">
                          <label>Body Weight</label>
                          <input name="body_weight" type="text" placeholder="Body Weight (lbs or kg)"
                            class="form-control" />
                        </div>
                      </div>
                      <div class="col-sm-6">
                        <div class="mb-3">
                          <label>Fitness Level</label>
                          <select name="fitness_level" class="form-control">
                            <option value="">Select Fitness Level</option>
                            <option value="Beginner">Beginner</option>
                            <option value="Intermediate">Intermediate</option>
                            <option value="Advanced">Advanced</option>
                          </select>
                        </div>
                      </div>
                    </div>

                    <div class="row">
                      <div class="col-12">
                        <div class="mb-3">
                          <label>Fitness Goals</label>
                          <textarea name="fitness_goals" placeholder="Describe your fitness goals" class="form-control"
                            rows="3"></textarea>
                        </div>
                      </div>
                    </div>

                    <div class="row">
                      <div class="col-12">
                        <div class="mb-3">
                          <label>Workout Preferences</label>
                          <textarea name="workout_preferences" placeholder="Describe your workout preferences"
                            class="form-control" rows="3"></textarea>
                        </div>
                      </div>
                    </div>

                    <div class="row">
                      <div class="col-12">
                        <div class="mb-3">
                          <label>Exercise Limitations</label>
                          <textarea name="exercise_limitations"
                            placeholder="Describe any exercise limitations or restrictions" class="form-control"
                            rows="3"></textarea>
                        </div>
                      </div>
                    </div>

                    <div class="row">
                      <div class="col-sm-6">
                        <div class="mb-3">
                          <label>Workout Frequency</label>
                          <input name="workout_frequency" type="text" placeholder="Workout Frequency"
                            class="form-control" />
                        </div>
                      </div>
                      <div class="col-sm-6">
                        <div class="mb-3">
                          <label>Workout Duration</label>
                          <input name="workout_duration" type="text" placeholder="Workout Duration"
                            class="form-control" />
                        </div>
                      </div>
                    </div>

                    <div class="row">
                      <div class="col-12">
                        <div class="mb-3">
                          <label>Available Equipment</label>
                          <textarea name="available_equipment" placeholder="Describe the available equipment"
                            class="form-control" rows="3"></textarea>
                        </div>
                      </div>
                    </div>

                    <div class="row">
                      <div class="col-12">
                        <div class="mb-3">
                          <label>Rest and Recovery Needs</label>
                          <textarea name="rest_recovery_needs" placeholder="Describe your rest and recovery needs"
                            class="form-control" rows="3"></textarea>
                        </div>
                      </div>
                    </div>

                    <div class="row">
                      <div class="col-12">
                        <div class="mb-3">
                          <label>Health Conditions</label>
                          <textarea name="health_conditions" placeholder="Describe any health conditions"
                            class="form-control" rows="3"></textarea>
                        </div>
                      </div>
                    </div>

                    <div class="row">
                      <div class="col-12">
                        <div class="mb-3">
                          <label>Current Medications/Substances</label>
                          <textarea name="medications_substances" placeholder="List any current medications/substances"
                            class="form-control" rows="3"></textarea>
                        </div>
                      </div>
                    </div>

                    <div class="row">
                      <div class="col-12">
                        <button type="submit" class="btn btn-primary">Submit</button>
                      </div>
                    </div>
                    <div class="mb-3 tm-sc-button mb-0 mt-20">
                      <input name="form_botcheck" class="form-control" type="hidden" value="" />
                      <button type="submit" class="btn btn-theme-colored1 btn-block btn-sm mt-20"
                        data-loading-text="Please wait...">
                        Apply Now
                      </button>
                    </div>
                  </form>
                  <!--Form Validation-->
                  <script>
                    (function ($) {
                      $("#meal_form").validate({
                        submitHandler: function (form) {
                          var form_btn = $(form).find('button[type="submit"]');
                          var form_result_div = "#form-result";
                          $(form_result_div).remove();
                          form_btn.before(
                            '<div id="form-result" class="alert alert-success" role="alert" style="display: none;"></div>'
                          );
                          var form_btn_old_msg = form_btn.html();
                          form_btn.html(
                            form_btn.prop("disabled", true).data("loading-text")
                          );
                          $(form).ajaxSubmit({
                            dataType: "json",
                            success: function (data) {
                              if (data.status === "true") {
                                $(form).find(".form-control").val("");
                              }
                              form_btn
                                .prop("disabled", false)
                                .html(form_btn_old_msg);
                              $(form_result_div)
                                .html(data.message)
                                .fadeIn("slow");
                              setTimeout(function () {
                                $(form_result_div).fadeOut("slow");
                              }, 6000);
                            },
                          });
                        },
                      });
                    })(jQuery);
                  </script>
                </div>
              </div>
